<!--
  Declarative Services declaration of LineDJ disabled media facade factory
  component. This component can be used by applications that do not require a
  media archive. It returns a dummy facade which does not interact with an
  existing media archive.
-->
<component xmlns="http://www.osgi.org/xmlns/scr/v1.1.0"
           name="lineDJ.disabledMediaFacadeFactory">
  <implementation class="de.oliver_heger.linedj.platform.mediaifc.disabled.DisabledMediaFacadeFactory" />

  <service>
    <provide interface="de.oliver_heger.linedj.platform.mediaifc.MediaFacadeFactory"/>
  </service>

</component>
