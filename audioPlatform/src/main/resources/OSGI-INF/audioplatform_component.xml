<!--
  Declarative Services declaration for the LineDJ audio platform component.
-->
<component xmlns="http://www.osgi.org/xmlns/scr/v1.1.0"
           name="lineDJ.AudioPlatform" immediate="true">
  <implementation class="de.oliver_heger.linedj.platform.audio.impl.AudioPlatformComponent" />

  <reference interface="de.oliver_heger.linedj.platform.app.ClientApplicationContext"
             name="clientContext" bind="initClientContext"/>
  <reference interface="de.oliver_heger.linedj.platform.mediaifc.MediaFacade$MediaFacadeActors"
             name="mediaFacadeActors" bind="initFacadeActors"/>

  <reference interface="de.oliver_heger.linedj.player.engine.PlaybackContextFactory"
             name="playbackContextFactory" bind="addPlaybackContextFactory"
             unbind="removePlaybackContextFactory" cardinality="1..n"
             policy="dynamic"/>
</component>
