<!-- Test configuration file with radio source definitions that uses an
     alternative root key.
 -->
<configuration>
<radioSources>
  <metadataExclusions>
    <metadataExclusion name="Unwanted music">
      <pattern>.*Blunt.*</pattern>
      <matchContext>Artist</matchContext>
      <resumeMode>NextSong</resumeMode>
      <checkInterval>120</checkInterval>
    </metadataExclusion>
    <metadataExclusion>
      <pattern>.*Spots.*</pattern>
      <checkInterval>30</checkInterval>
    </metadataExclusion>
    <metadataExclusion name="timeRestricted">
      <pattern>.*ads.*</pattern>
      <checkInterval>29</checkInterval>
      <applicableAt>
        <time>
          <hours from="6" to="20"/>
          <minutes from="27" to="30"/>
        </time>
        <time>
          <hours from="6" to="20"/>
          <minutes from="57" to="60"/>
        </time>
      </applicableAt>
    </metadataExclusion>
    <metadataExclusion>
      <checkInterval>999</checkInterval>
    </metadataExclusion>
  </metadataExclusions>
  <sources>
    <source>
      <name>HR 1</name>
      <uri>http://metafiles.gl-systemhaus.de/hr/hr1_2.m3u</uri>
      <extension>mp3</extension>
      <ranking>1</ranking>
      <exclusions>
        <exclusion>
          <days>
            <day>MONDAY</day>
            <day>TUESDAY</day>
            <day>WEDNESDAY</day>
            <day>THURSDAY</day>
            <day>FRIDAY</day>
            <day>SATURDAY</day>
          </days>
          <hours from="6" to="20"/>
          <minutes from="27" to="30"/>
        </exclusion>
        <exclusion>
          <days>
            <day>MONDAY</day>
            <day>TUESDAY</day>
            <day>WEDNESDAY</day>
            <day>THURSDAY</day>
            <day>FRIDAY</day>
            <day>SATURDAY</day>
          </days>
          <hours from="6" to="20"/>
          <minutes from="57" to="60"/>
        </exclusion>
      </exclusions>
      <metadata>
        <songPattern>(?&lt;artist>[^/]+)/\s*(?&lt;title>.+)</songPattern>
        <resumeIntervals>
          <resumeInterval>
            <minutes from="0" to="3" />
          </resumeInterval>
          <resumeInterval>
            <minutes from="29" to="32" />
          </resumeInterval>
        </resumeIntervals>
        <metadataExclusions>
          <metadataExclusion>
            <pattern>.*Werbung.*</pattern>
            <matchContext>Title</matchContext>
            <resumeMode>MetadataChange</resumeMode>
            <checkInterval>60</checkInterval>
          </metadataExclusion>
          <metadataExclusion>
            <pattern>.*skip at full hour.*</pattern>
            <matchContext>Title</matchContext>
            <resumeMode>MetadataChange</resumeMode>
            <checkInterval>45</checkInterval>
            <applicableAt>
              <time>
                <minutes from="58" to="60"/>
              </time>
            </applicableAt>
          </metadataExclusion>
        </metadataExclusions>
      </metadata>
    </source>
    <source>
      <name>HR 2</name>
      <uri>http://metafiles.gl-systemhaus.de/hr/hr2_2.m3u</uri>
      <extension>mp3</extension>
    </source>
    <source>
      <name>Rockland</name>
      <uri>http://188.94.97.90/rockland.mp3</uri>
      <ranking>10</ranking>
      <exclusions>
        <exclusion>
          <hours from="6" to="20"/>
          <minutes from="22" to="27"/>
