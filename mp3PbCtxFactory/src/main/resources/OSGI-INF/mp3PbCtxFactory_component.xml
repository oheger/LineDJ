<!--
  Declarative Services declaration of LineDJ MP3 playback context factory
  component. This component adds support for MP3 files to the audio player
  engine.
-->
<component xmlns="http://www.osgi.org/xmlns/scr/v1.1.0"
           name="lineDJ.mp3PlaybackContextFactory" immediate="false">
  <implementation class="de.oliver_heger.linedj.player.engine.mp3.Mp3PlaybackContextFactory" />

  <service>
    <provide interface="de.oliver_heger.linedj.player.engine.PlaybackContextFactory"/>
  </service>

</component>
