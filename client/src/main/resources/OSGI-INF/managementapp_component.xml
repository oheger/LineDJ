<!--
  Declarative Services declaration of LineDJ client management application
  component.
-->
<component xmlns="http://www.osgi.org/xmlns/scr/v1.1.0"
           name="lineDJ.clientManagementApplication" immediate="true">
  <implementation class="de.oliver_heger.linedj.client.app.ClientManagementApplication" />

  <service>
    <provide interface="de.oliver_heger.linedj.client.app.ClientApplicationContext"/>
  </service>

  <reference interface="akka.actor.ActorSystem" name="actorSystem" bind="initActorSystem"/>

  <reference interface="de.oliver_heger.linedj.client.mediaifc.MediaFacadeFactory"
             name="mediaFacadeFactory" bind="initMediaFacadeFactory"/>

  <reference interface="net.sf.jguiraffe.gui.app.Application" name="clientApp"
             bind="addClientApplication" unbind="removeClientApplication" cardinality="0..n"
             policy="dynamic"/>
</component>
